<div class="container">
  <h2 class="text-center mb-4"><%= @user.name %>'s Profile</h2>
  <table class="table table-dark">
    <tbody>
    <tr class="profile-row">
      <td>Name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr class="profile-row">
      <td>Username</td>
      <td><%= @user.username %></td>
    </tr>
    <tr class="profile-row">
      <td>Password</td>
      <td>********</td>
    </tr>
    <tr class="profile-row">
      <td>Phone Number</td>
      <td><%= @user.phone %></td>
    </tr>
    <tr class="profile-row">
      <td>Email</td>
      <td><%= @user.email %></td>
    </tr>
    </tbody>
  </table>
  <%= link_to "Edit", edit_user_path, class: "btn btn-outline-primary"%>
</div>