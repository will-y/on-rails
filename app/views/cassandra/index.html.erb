<h1>Cassandra Connection</h1>
<h2>Cluster Name: <%= @name %></h2>
<h3>Hosts:</h3>
<table>
	<thead>
		<tr>
			<th>IP</th>
			<th>ID</th>
			<th>DataCenter</td>
			<th>Rack</td>
		</tr>
	</thead>
	<tbody>
		<% @hosts.each do |host| %>
			<tr>
				<td><%= host.ip%></td>
				<td><%= host.id%></td>
				<td><%= host.datacenter%></td>
				<td><%= host.rack%></td>
			</tr>
		<% end %>
	</tbody>
</table>

<% if @connected %>
	<h2> Neo4j Connection: <span style="color:green">Online</span></h2>
<% else %>
	<h2> Neo4j Connection: <span style="color:red">Offline</span></h2>
<% end %>
